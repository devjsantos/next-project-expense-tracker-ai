# Copy this to `.env.local` and fill with real values for local development.

# Use a local sqlite file for quick dev: DATABASE_URL="file:./dev.db"
DATABASE_URL="file:./dev.db"

# Clerk (auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# OpenRouter / OpenAI (or set OPENAI_API_KEY)
OPENROUTER_API_KEY=sk-or-YOUR_KEY
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY

# The public URL of your app (used in AI helper headers)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Resend API key (preferred for transactional email) - verify your sending domain in Resend
RESEND_API_KEY=put_resend_key_here
RESEND_FROM=alerts@yourdomain.com

# Optional: SendGrid key (alternative)
SENDGRID_API_KEY=put_sendgrid_key_here


# Optional: Self-hosted SMTP (use to send real emails without Resend)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=alerts@yourdomain.com
